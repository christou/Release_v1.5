         "lom:language":"fre",
         "lom:description":{
            "lom:associatedPicture":{
               "lom:catalog":"media/POI_Grimage/Grimageposter.jpg"
            },
            "lom:associatedVideo": [
            	{
               "lom:catalog":"media/POI_Grimage/MBytes_GRIMAGE.mp4"
